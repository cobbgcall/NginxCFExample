{
    "agent": {
        "metrics_collection_interval" : 15,
        "region": "us-west-2",
        "logfile": "/var/log/amazon/CWagentconf.log"
    },

    "metrics" : {
        "namespace" : "Deployment/QA",
        "append_dimensions" : {
            "InstanceId" : "${aws:InstanceId}",
            "InstanceType" : "${aws:InstanceType}",
            "ImageId" : "${aws:ImageId}"   
        },
        "metrics_collected" : {
            "cpu": {
                "resources" : ["*"],
                "measurement" : [
                    {
                        "name" : "cpu_time_active" , "unit" : "seconds"
                    },
                    {
                        "name" : "cpu_usage_active", "unit" : "percentage"
                    }
                ]
            },

            "disk" : {
                "resources" : ["*"],
                "measurement" : [
                    {
                        "name" : "disk_used", "unit" : "bytes"
                    },
                    {
                        "name" : "disk_used_percent", "unit" : "percentage"
                    },
                    {
                        "name" : "disk_total", "unit" : "bytes"
                    }
                ]
            },

            "mem" : {
                "resources" : ["*"],
                "measurement" : [
                    {
                        "name" : "mem_free", "unit" : "bytes"
                    },
                    {
                        "name" : "mem_used", "unit" : "bytes"
                    },
                    {
                        "name" : "mem_total", "unit" : "bytes"
                    }
                ]
            }
        }
    },

    "logs_collected":{
        "files" : {
            "collect_list" : [
                {
                    "file_path" : "/var/log/nginx/access.log",
                    "log_group_name" : "Deployment/QA"
                }
            ]
        }
    },

    "log_stream_name" : "nginx"
}